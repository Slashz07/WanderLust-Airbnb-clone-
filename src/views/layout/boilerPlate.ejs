<script>
    function highlightEmoji(value) {
        // Remove highlight from all emojis
        document.querySelectorAll('.emoji').forEach(function(emoji) {
            emoji.style.opacity = "0.5";
        });

        // Highlight the selected emoji
        const selectedEmoji = document.querySelector(`.emoji[data-value="${value}"]`);
        if (selectedEmoji) {
            selectedEmoji.style.opacity = "1";
        }
    }

    // Initialize the highlight based on the default value of the range
    document.addEventListener('DOMContentLoaded', function() {
        if(document.getElementById('ratingRange'))
        highlightEmoji(document.getElementById('ratingRange').value);
    });
</script>

